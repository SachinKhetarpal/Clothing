@model List<Product>
@{
    ViewBag.Title = "ProductTable";
}


    

    <div id="tableContainer">
        <table>
            <thead>
                <tr>
                    <td>Product Name</td>
                    <td>Category</td>
                    <td>Price</td>
                    <td>Actions</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in @Model)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>-</td>
                        <td>@product.Price</td>
                        <td>
                            <button data-id=@product.ID class="editBtnClass">Edit</button>
                            <button data-id=@product.ID class="deleteBtnClass">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    
